{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "dipeshgod/lms-frontend",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "backend",
      "image": "dipeshgod/lms-backend",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "dipeshgod/lms-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["frontend", "backend"]
    }
  ]
}
